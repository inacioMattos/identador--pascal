TUDO
{
	
	Função INICIO():

		CODIGO, LINGUAGEM <- INPUT();
		REGRAS_ESPECIFICA <- SET_REGRAS(LINGUAGEM);

		CODIGO <- TRATAMENTO_DO_CODIGO(REGRAS_ESPECIFICA);
		REGRAS <- CRIAR_REGRAS();
		
		RESULTADO <- IDENTAR(CODIGO, REGRAS);

		OUTPUT(RESULTADO);

	FIMFUNÇÃO



	Função IDENTAR(CODIGO, REGRAS):

		Se APLICAR_REGRAS(CODIGO, REGRAS) = NULL, retorne CODIGO;
		Senão:
			CODIGO = APLICAR_REGRAS(CODIGO, REGRAS);
			Retorne IDENTAR(CODIGO, REGRAS);

	FIM FUNÇÃO



	Função APLICAR_REGRAS(CODIGO, REGRAS):

		REGRA <- ESCOLHER_REGRA(CODIGO, REGRAS);

		Se REGRA = NULL, retorne NULL;
		Senao:




	Função ESCOLHER_REGRA(CODIGO, REGRAS):
	
		Para cada LINHA n em CODIGO faça:
				Para cada REGRA r em REGRAS faça:
					Se IS_APLICAVEL(CODIGO[n], REGRAS[r]), retorne REGRAS[r];

		Retorne NULL;

	FIM FUNÇÃO

}
